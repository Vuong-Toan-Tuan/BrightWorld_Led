            <h3 class="title-big text-center mb-md-5 mb-4">Our Products</h3>
            <div class="fea-gd-vv text-center row justify-content-center">

                @foreach (var item in Model)
                {


                    <div class="float-top col-lg-4 col-md-6">
                        <a href="/HomeUser/Details/@item.ProductId">
                            <img src="@item.Image" class="img-responsive" alt="">
                        </a>
                        <div class="float-lt feature-gd">
                            <h3>
                                <a href="/HomeUser/Details/@item.ProductId">
                                    @item.ProductName
                                </a>
                            </h3>
                            <p style="color:red">@item.Price₫</p>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
    <!-- //features -->
</section>